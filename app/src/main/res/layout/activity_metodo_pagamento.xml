<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Activity_metodoPagamento">

    <ImageButton
        android:id="@+id/metodoPagamento_imgbtn_voltarHome"
        android:layout_width="69sp"
        android:layout_height="70sp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019"
        app:srcCompat="@drawable/voltar"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="301dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <Button
            android:id="@+id/metodoPagamento_imgbtn_scannerCodigo"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:backgroundTint="#FF5722"
            android:text="Escanear código de barras"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="14dp"
            app:icon="@drawable/opcaocamera"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconSize="50dp"
            app:iconTint="#000" />

        <Button
            android:id="@+id/metodoPagamento_imgbtn_scannerbarras"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:backgroundTint="#FF5722"
            android:text="Digite o código de barras"
            android:textColor="#000"
            app:icon="@drawable/iconecodigodebarras"
            app:iconSize="50dp"
            app:iconTint="#000" />

        <Button
            android:id="@+id/metodoPagamento_imgbtn_scannerQrcode"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:backgroundTint="#FF5722"
            android:text="Escanear o QR Code"
            android:textColor="#000"
            app:icon="@drawable/iconeqrcode"
            app:iconSize="55dp"
            app:iconTint="#000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>